<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout

        android:id="@+id/gridLayout2"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@drawable/table"
        android:columnCount="3"
        android:foregroundGravity="center"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.603">


        <ImageView
            android:id="@+id/black1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="0"

            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:onClick="dropIn"
            android:tag="0"

            />

        <ImageView
            android:id="@+id/black2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:onClick="dropIn"
            android:tag="1" />

        <ImageView
            android:id="@+id/black3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="2"

            android:layout_gravity="center"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="15dp"
            android:onClick="dropIn"
            android:tag="2"

            />

        <ImageView
            android:id="@+id/black4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="29dp"
            android:onClick="dropIn"
            android:tag="3"

            />

        <ImageView
            android:id="@+id/black5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="29dp"
            android:onClick="dropIn"
            android:tag="4" />


        <ImageView
            android:id="@+id/black6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="29dp"
            android:onClick="dropIn"
            android:tag="5"

            />

        <ImageView
            android:id="@+id/black7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="29dp"
            android:onClick="dropIn"
            android:tag="6" />

        <ImageView
            android:id="@+id/black8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="29dp"
            android:onClick="dropIn"
            android:tag="7"

            />

        <ImageView
            android:id="@+id/black9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="29dp"
            android:onClick="dropIn"
            android:tag="8" />


    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="28dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/player1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#ffffff"
            android:gravity="center"
            android:text="Player 1"
            android:textColor="#ff0006"
            android:textSize="26sp"

            />

        <TextView
            android:id="@+id/player2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#ffffff"
            android:gravity="center"
            android:text="Player 2"
            android:textColor="#ff0006"
            android:textSize="26sp" />
    </LinearLayout>

    <Button
        android:id="@+id/playagain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/roundedbutton"
        android:onClick="play"
        android:text="Play again"
        android:textColor="#ff0006"
        android:textSize="26sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout2"
        app:layout_constraintVertical_bias="0.358" />
</androidx.constraintlayout.widget.ConstraintLayout>